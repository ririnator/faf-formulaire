{
  "name": "faf-multitenant",
  "version": "1.0.0",
  "description": "FAF Multi-Tenant - Form-a-Friend with multiple admins",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "utils/**/*.js",
      "api/**/*.js",
      "middleware/**/*.js"
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "bcrypt": "^6.0.0",
    "jest": "^30.2.0"
  }
}
