# Post-Deployment Test Environment Configuration
# Copy this file to .env.production and configure with your production values

# Application Configuration
NODE_ENV=production
APP_BASE_URL=https://your-production-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Database Configuration
MONGODB_URI=mongodb://username:password@host:port/database-name

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-here

# Admin Authentication
LOGIN_ADMIN_USER=admin-username
LOGIN_ADMIN_PASS=admin-password
FORM_ADMIN_NAME=admin-form-name

# External Services (Optional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Service (Optional)
EMAIL_SERVICE_API_KEY=your-email-service-key
EMAIL_FROM_ADDRESS=noreply@your-domain.com

# Security Configuration (Optional)
HTTPS=true
COOKIE_DOMAIN=.your-domain.com

# Test Configuration (Optional)
POST_DEPLOYMENT_TEST_TIMEOUT=30000
POST_DEPLOYMENT_VERBOSE=false
POST_DEPLOYMENT_PARALLEL=false

# Monitoring Configuration (Optional)
MONITORING_ENABLED=true
ALERTING_ENABLED=true
METRICS_COLLECTION_INTERVAL=30000

# Performance Thresholds (Optional)
MAX_RESPONSE_TIME=2000
MAX_MEMORY_USAGE=512
MAX_DB_CONNECTIONS=100
MAX_CPU_USAGE=80

# Security Thresholds (Optional)
MAX_FAILED_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100